# ---------------------------------------------------------------
# Assembly language program that reads data from the switches
# and displays it on the LEDs.
# ---------------------------------------------------------------

.text

# define a macro to move a 32 bit address to a register

.macro MOVIA reg, addr
  movhi \reg, %hi(\addr)
  ori \reg, \reg, %lo(\addr)
.endm

# define constants
.equ SW,    0x11020    #base address of Switches in the system.h file
.equ SW0,   0x00000    #value for sw0 being pressed
.equ KEY,   0x11010    #base address of pushbuttons in the system.h file
.equ KEY1,  0x00002    #value for key1 being pressed (0b1101)
.equ HEX0,  0x11000    #base address of HEX0 in the system.h file

#Define the main program
.global main
main: 	#load addresses
  		movia r2, SW
		movia r3, KEY
		movia r4, HEX0

  		addi r5, r0, 0x40  #write 0 to r5
  		stbio r5, 0(r6)	   #write 0 to HEX0

  		addi r8, r0, 0  # create counter register

loop:
		ldbio r12, 0(r2)
		ldbio r14, 0(r4)   #read value at pushbutton address to r14
		beq r9&KEY1,r0, PRESS  #if key1 pressed (r is 0b1101), jump to PRESS

		br loop

PRESS:
		call	WAIT  #wait for pushbutton to be released

		addi r8,r8, 1  # add one to count

WAIT:
		ldbio r9, 0(r4)  #check key1 value
		beq r5,r9, WAIT  #wait for key1 to be released
